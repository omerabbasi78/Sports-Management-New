@model IEnumerable<EventsViewModels>
@{
    ViewBag.Title = "Events";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="col-md-12">

    <div class="card">
        <div class="card-header m-b-md">
            <h5 class="card-header-text">Events List</h5>
            <a href="/Events/Detail" class="btn btn-sm btn-primary pull-right"><i class="fa fa-plus"></i> Add Event</a>
        </div>
        <div class="card-block">
            @if (Model != null && Model.Count() > 0)
            {
                <table class="table table-hover snap-primary-table">
                    <thead>
                        <tr>
                            <th>Event Name</th>
                            <th>Sport Name</th>
                            <th>Venue Name</th>
                            <th>Start Date</th>
                            <th>End Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            @Html.HiddenFor(model => item.EventId)
                            <tr>
                                <td>@item.EventName</td>
                                <td>@item.SportName</td>
                                <td>@item.VenueName</td>
                                <td>@item.StartDate.ToShortDateString()</td>
                                <td>@item.EndDate.ToShortDateString()</td>

                                @if (item.UserId == WebApp.HelperClass.Common.CurrentUser.Id)
                                {
                                    <td>
                                        <a class="grid_action" href="@Url.Action("Detail", "Events", new { id = item.EventId })" title="Edit"><i class="fa fa-pencil"></i></a>|
                                        <a class="grid_action" href="@Url.Action("ChallengeUsers", "Events", new { id = item.EventId })" data-toggle="modal" data-target="#modal-container" title="Challenge Opponents"><i class="fa fa-bullhorn"></i> </a>|
                                        <a class="grid_action" href="@Url.Action("Delete", "Events", new { id = item.EventId })" data-toggle="modal" data-target="#modal-container"
                                           onclick="return confirm('Are you sure you want to delete?');" title="Delete"><i class="fa fa-trash"></i></a>
                                    </td>
                                }
                                else
                                {
                                    if (!item.IsFree && item.TotalBoughtTickets < item.TotalTicketAllowed)
                                    {
                                        <td>
                                            <a class="grid_action" href="@Url.Action("Challenge", "Events", new { id = item.EventId })" data-toggle="modal" title="Buy Ticket"><i class="fa fa-ticket"></i></a>
                                        </td>
                                        @*<a href="/Events/Challenge/@item.EventId" data-toggle="modal" class="btn btn-outline pull-right animated tada"> Buy Ticket </a>*@
                                    }
                                    else if (!item.IsFree && item.TotalBoughtTickets >= item.TotalTicketAllowed)
                                    {
                                        <td>
                                            <a class="grid_action" href="#" title="Sold Out"><i class="fa fa-gavel"></i></a>
                                        </td>
                                        @*<a href="#" data-toggle="modal" class="btn btn-outline pull-right animated tada"> Sold Out </a>*@
                                    }
                                    else if (item.IsFree)
                                    {
                                        <td>
                                            <a class="grid_action" href="#" title="Sold Out"><i class="fa fa-sign-in"></i></a>
                                        </td>
                                        @*<a href="#" data-toggle="modal" class="btn btn-outline pull-right animated tada"> Free </a>*@
                                    }
                                }



                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>


<div class="modal inmodal" id="modal-container" tabindex="-1" role="dialog" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content animated bounceInRight">
        </div>
    </div>
</div>

