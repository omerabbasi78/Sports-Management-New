@model EventsViewModels
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Detail</h2>
@using (Html.BeginForm())
{
<div>
    @Html.HiddenFor(model => model.EventId)
    @Html.HiddenFor(model => model.UserId)
    @Html.HiddenFor(model => model.DateCreated)
    @Html.HiddenFor(model => model.IsActive)

    Name:
    @Html.EditorFor(model => model.EventName)
    Start Date:
    @Html.EditorFor(model => model.StartDate)
    End Date:
    @Html.EditorFor(model => model.EndDate)
    Sports Type:
    @Html.DropDownListFor(model => model.SportId, new SelectList(Model.SportsList, "SportId", "SportName"))
    Venue:
    @Html.DropDownListFor(model => model.VenueId, new SelectList(Model.VenueList, "VenueId", "VenueName"))
</div>
<button type="submit">Save</button>
}