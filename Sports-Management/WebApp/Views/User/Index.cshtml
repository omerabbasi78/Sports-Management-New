@model List<Users>

@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@if (Model != null && Model.Count() > 0)
{

    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-2">
                    <b>Name</b>
                </div>
                <div class="col-md-2">
                    <b>User Name</b>
                </div>
                <div class="col-md-2">
                    <b>Email</b>
                </div>
                <div class="col-md-2">
                    <b>Address</b>
                </div>
                <div class="col-md-2">
                    <b>Date Created</b>
                </div>
                
            </div>
        </div>
    </div>

    foreach (var item in Model)
    {

        if (item.IsActive)
        {
            <a href="/User/Delete/@item.Id" class="btn btn-outline pull-right animated tada" onclick="return confirm('Are you sure you want to block?');">Block User</a>
        }
        else
        {
            <a href="/User/Activate/@item.Id" class="btn btn-outline pull-right animated tada" onclick="return confirm('Are you sure you want to activate?');">Activate User</a>
        }



        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-2">
                        @Html.DisplayFor(model => item.Name)
                    </div>
                    <div class="col-md-2">
                        @Html.DisplayFor(model => item.UserName)
                    </div>
                    <div class="col-md-2">
                        @Html.DisplayFor(model => item.Email)
                    </div>
                    <div class="col-md-2">
                        @Html.DisplayFor(model => item.Address)
                    </div>
                    <div class="col-md-2">
                        @Html.DisplayFor(model => item.DateCreated)
                    </div>
                </div>
            </div>
        </div>
    }
}